  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "dynamoose": "^2.8.5",
    "express": "^4.17.3",
    "flat": "^5.0.2",
    "html-pdf": "^3.0.1",
    "joi": "^17.6.0",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.3.0",
    "uuid": "^8.3.2",
    "winston": "^3.6.0",
    "xlsx": "^0.18.5"
  },
